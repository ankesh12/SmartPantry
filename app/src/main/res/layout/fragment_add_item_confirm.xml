<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sg.edu.nus.iss.smartpantry.views.fragments.AddItemConfirm"
    android:weightSum="1">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Product"
        android:id="@+id/productText"
        android:layout_weight="0.23"
        android:textColor="#FAFAFA"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/prodDescText"
        android:inputType="textMultiLine"
        android:textColor="#E6E6E6"
        android:layout_below="@+id/productText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/prodImage"
        android:layout_gravity="center"
        android:gravity="center"
        android:adjustViewBounds="false"
        android:layout_below="@+id/prodDescText"
        android:layout_centerInParent="true" />


    <NumberPicker
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/quantPick"
        android:solidColor="#fa0d0501"
        android:orientation="horizontal"
        android:layout_marginTop="78dp"
        android:layout_below="@+id/prodImage"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true">
    </NumberPicker>


</RelativeLayout>
