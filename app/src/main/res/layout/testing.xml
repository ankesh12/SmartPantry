<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/imageViewProd"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_weight="0.6"

            android:orientation="horizontal"
            android:background="#f48fb1">
            <!-- android:background="@android:color/holo_purple" -->

            <!-- Thumbnail Image -->
            <ImageView
                android:id="@+id/icon_card"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_alignParentLeft="true"
                android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
                android:src="@mipmap/ic_launcher" />

            <!-- Item Name -->
            <TextView
                android:id="@+id/Itemname_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/icon_card"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/icon_card"
                android:text="Product"
                android:textSize="17dp"
                android:textStyle="bold"
                android:textColor="#000000" />"
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Itemname_card"
                android:layout_toRightOf="@+id/icon_card">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <!-- Category -->
                    <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:id="@+id/categoryText"-->
                    <!--android:layout_marginTop="1dip"-->
                    <!--android:text="Cat : "-->
                    <!--android:textStyle="bold"-->
                    <!--android:textColor="#ffff281c" />-->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/category_card"
                        android:layout_marginTop="1dip"
                        android:text="Yoooo"
                        android:textColor="#4A148C"
                        android:textStyle="bold" />


                    <!-- Threshold -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/threshText_card"
                        android:layout_marginTop="1dip"
                        android:text="Thresh : "
                        android:textStyle="bold"
                        android:textColor="#FF8000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/threshold_card"
                        android:layout_marginTop="1dip"
                        android:text="Yoooo"
                        android:textStyle="bold"
                        android:textColor="#0000FF"/>

                    <!-- Quantity -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/qtyText_card"
                        android:text="Qty : "
                        android:textStyle="bold"
                        android:textColor="#FF8000" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/quant_card"
                        android:textStyle="bold"
                        android:textColor="#0000FF"/>
                </LinearLayout>
            </RelativeLayout>

            </RelativeLayout>

        <RelativeLayout
            android:id="@+id/cardDetails"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:background="#FFFFFF"

            android:orientation="horizontal">
            <!--android:background="@android:color/holo_orange_light"-->
            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:id="@+id/text1"-->
                <!--android:text="Product Name: "-->
                <!--android:textColor="#4a148c"-->
                <!--android:textSize="20dp"-->
                <!--android:textStyle="bold"/>-->

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:id="@+id/cardProdName"-->
                <!--android:layout_toRightOf="@+id/text1"-->
                <!--android:textColor="#4a148c"-->
                <!--android:textSize="20dp"-->
                <!--android:textStyle="bold"/>-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item Details"
                android:id="@+id/itemDet"
                android:textColor="#ff4081"
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/itemDet"
                android:id="@+id/cardItemDetails"/>

        </RelativeLayout>



    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:clickable="true"
        android:src="@drawable/ic_add_black_18dp_xxhd"
        app:layout_anchor="@id/imageViewProd"
        app:layout_anchorGravity="bottom|right|end"/>

</android.support.design.widget.CoordinatorLayout>